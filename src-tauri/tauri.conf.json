{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "yarn build",
        "beforeDevCommand": "yarn dev",
        "devPath": "http://localhost:5173",
        "distDir": "../dist"
    },
    "package": {
        "productName": "ahridbms",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": false
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "© 2022 ahriknow",
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.ahriknow.dbms",
            "longDescription": "开源数据库管理工具 / Open source database management tool. (redis, postgresql, mysql, mongodb, etc. Developing...)",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "开源数据库管理工具",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": "",
                "wix": {
                    "language": [
                        "zh-CN",
                        "ru-RU",
                        "en-US"
                    ],
                    "license": "LICENSE.rtf"
                }
            },
            "appimage": {
                "bundleMediaFramework": false
            },
            "deb": {
                "depends": []
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false,
            "endpoints": [
                "https://installer.service.ahriknow.com/latest.json"
            ],
            "dialog": false,
            "pubkey": ""
        },
        "windows": [
            {
                "fullscreen": false,
                "height": 768,
                "resizable": true,
                "title": "AhriDBMS",
                "width": 1366,
                "center": true,
                "visible": false
            },
            {
                "width": 400,
                "height": 200,
                "decorations": false,
                "url": "splashscreen.html",
                "label": "splashscreen",
                "center": true
            }
        ]
    }
}